{
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "public/*"],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES6",
		"module": "ESNext",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"esModuleInterop": true,
		// "sourceMap": true,
		"baseUrl": "./",
		"paths": {
			"src": ["src"]
		},
	}
}
