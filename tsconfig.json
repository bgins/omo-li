{
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "public/*"],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES2017",
		"isolatedModules": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"src": ["src"]
		},
		"types": [
			"svelte",
			"svelte/store",
			"svelte/motion",
			"svelte/transition",
			"svelte/animate",
			"svelte/easing"
		],
		"lib": ["DOM"]
	}
}
